{
  "name": "Browsing improvemnets",
  "version": "1.8",
  "manifest_version": 3,
  "icons": {
    "32": "icons/32.png",
    "72": "icons/72.png",
    "128": "icons/128.png",
    "512": "icons/512.png"
  },
  "permissions": ["scripting", "storage", "activeTab", "tabs"],
  "action": {
    "default_popup": "src/popup/popup.html"
  },
  "web_accessible_resources": [
    {
      "resources": ["src/light-mode/toggle.js"],
      "matches": ["<all_urls>"]
    }
  ],
  "content_scripts": [
    {
      "matches": ["https://*.twitter.com/*", "https://*.x.com/*"],
      "js": ["libs/levenshtein.js", "src/twitter/content-script.js"],
      "run_at": "document_start"
    },
    {
      "matches": ["<all_urls>"],
      "js": ["src/light-mode/content-script.js"],
      "run_at": "document_end"
    }
  ]
}
